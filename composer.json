{
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "4.0",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.0.zip"
        },
        "require": {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "fancyguy/webroot-installer": "1.1.0",
    "php": ">=5.3.0",
    "roots/soil": "3.0.1",
    "vlucas/phpdotenv": "v1.0.6",
    "wordpress": "4.0",
    "wpackagist/advanced-custom-fields": "4.3.9",
    "wpackagist/database-sync": "0.3.1",
    "wpackagist/jetpack-markdown": "3.1",
    "wpackagist/webmention": "2.3.1",
    "wp-cli/wp-cli": "v0.15.0"
  },
  "extra": {
    "webroot-dir": "wp",
    "webroot-package": "wordpress",
    "installer-paths": {
      "app/plugins/{$name}/": ["type:wordpress-plugin"],
      "app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "app/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
